# KAST Web Production Environment Configuration
# Copy this file to /opt/kast-web/.env and update with your production values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-very-secure-random-secret-key-change-this

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:////home/kali/kast-web/db/kast.db

# For PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/kast_web

# For MySQL/MariaDB
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/kast_web

# Redis Configuration (for Celery)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# KAST CLI Configuration
KAST_CLI_PATH=/usr/local/bin/kast
KAST_RESULTS_DIR=/home/kali/kast_results

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
SCANS_PER_PAGE=20

# Security Settings (optional but recommended)
SESSION_COOKIE_SECURE=True  # Enable if using HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600  # 1 hour in seconds

# Logging (optional)
LOG_LEVEL=INFO
